html {
    height: 100%;
    overflow: hidden;
}

body {
    background: url("../images/login/loginbg.png") no-repeat center;
    height: 100%;
}

/*缁夊娅庣悰銊ュ礋婵夘偄鍘栭懝锟�*/
input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0 1000px #ececec inset;
}

/*閹稿鎸崇粔璁崇瑐閸樺顤侀懝锟�*/
.layui-btn-primary:hover {
    border-color: #1E9FFF;
    color: #333;
}

/*妞ょ敻娼伴懗灞炬珯閼癸拷*/
.input::-webkit-input-placeholder {
    font-size: 16px;
    color: #696969;
}

.m-login-bg {
    /* background: url("../images/login/login_bg.png") left center repeat-x; */
    height: 100%;
}

.s-login-bg {
    /* background: url("../images/login/login_bg.png") left center repeat-x; */
    background: url("../images/bg.jpg") left center repeat-x;
    height: 100%;
}

.c-login-bg {
    /* background: url("../images/login/login_bg.png") left center repeat-x; */
    height: 100%;
}

.m-login {
    width: 466px;
    position: absolute;
    left: 50%;
    top: 40%;
    margin-left: -233px;
    margin-top: -265px;
}

.m-login-header {
    background: url("../images/login/login.png") no-repeat center;
    height: 186px;
    background-size: contain;
}

.s-login-header {
    background: url("../images/logo5.png") no-repeat center;
    height: 186px;
    background-size: contain;
}

.c-login-header {
    background: url("../images/logo8.png") no-repeat center;
    height: 186px;
    background-size: contain;
}

.m-login h3 {
    color: #fff;
    text-align: center;
    height: 60px;
    font-size: 28px;
}

.m-login .copyright {
    text-align: center;
    color: #999;
    padding-top: 10px;
}

.m-login-warp {
    /*  background: #fff;
     -webkit-box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
     box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
     -webkit-border-radius: 6px; */
    border-radius: 6px;
    padding: 5px;
    margin-top: 2%;
}

.m-login-warp .m-login-user {
    background: url("../images/login/user.png") no-repeat center;
    width: 20px;
    height: 20px;
    position: relative;
    top: 35px;
    left: 22px;
}

.m-login-warp .m-login-pass {
    background: url("../images/login/pass.png") no-repeat center;
    width: 20px;
    height: 20px;
    position: relative;
    top: 35px;
    left: 22px;
}

.m-login-warp .m-login-verify {
    background: url("../images/login/code.png") no-repeat center;
    width: 20px;
    height: 20px;
    position: relative;
    top: 35px;
    left: 22px;
}

.m-login-warp .m-login-verifyInput {
    position: relative;
    float: left;
    width: 60%;
}

.m-login-warp .m-login-verifyImg {
    position: relative;
    float: left;
    width: 36%;
    padding-left: 12px;
    padding-top: 20px;
}

.m-login-warp .layui-input {
    height: 52px;
    line-height: 40px \9;
    margin-bottom: 5px;
    -webkit-transition-property: none;
    transition-property: none;
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid #ececec;
    padding-left: 15%;
    font-size: 16px;
}

.m-login-warp > .layui-form > .layui-form-item {
    margin-bottom: -10px;
}

#verity {
    padding-left: 25%;
}

.m-login-warp .m-login-btn .layui-inline {
    width: 49%;
    margin: 0;
}

.m-login-warp .m-login-btn .layui-inline button {
    width: 100%;
}

.m-login-warp .verifyImg {
    width: 100%;
    height: 40px;
}

#sub {
    width: 100%;
    background-color: #0484dd;
    margin-top: 30px;
    height: 52px;
    font-size: 17px;
}

@media screen and (max-width: 450px) {
    .m-login {
        width: 300px;
        position: absolute;
        left: 50%;
        top: 50%;
        margin-left: -150px;
        margin-top: -240px;
    }

    .layui-form-item .layui-inline {
        display: block;
        margin-right: 0;
        margin-bottom: 20px;
        clear: both;
    }

    .m-login-warp .m-login-btn .layui-inline {
        width: 100%;
        margin: 0 0 10px;
    }
}
